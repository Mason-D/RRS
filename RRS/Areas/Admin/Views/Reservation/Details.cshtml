@model RRS.Data.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name:
        </dt>
        <dd class = "col-sm-4">
            @Model.Customer.FirstName
        </dd>
        <dt class = "col-sm-2">
            Last Name:
        </dt>
        <dd class = "col-sm-4">
            @Model.Customer.LastName
        </dd>
        <dt class = "col-sm-2">
            Contact:
        </dt>
        <dd class = "col-sm-4">
            @Model.Customer.PhoneNumber
        </dd>
        <dt class = "col-sm-2">
            Status:
        </dt>
        <dd class = "col-sm-4">
            @Model.ReservationStatus.Description
        </dd>
        <dt class = "col-sm-2">
            Date:
        </dt>
        <dd class = "col-sm-4">
            @Model.Sitting.Start.ToString("ddd d MMM yyyy")
        </dd>
        <dt class = "col-sm-2">
            Guests:
        </dt>
        <dd class = "col-sm-4">
            @Model.NoOfGuests
        </dd>
        <dt class = "col-sm-2">
            Time(SITTING)
        </dt>
        <dd class = "col-sm-4">
            @Model.Sitting.Start.ToString("hh:mm tt")
        </dd>
        <dt class = "col-sm-2">
            Origin:
        </dt>
        <dd class = "col-sm-4">
            @Model.ReservationOrigin.Description
        </dd>
        <dt class = "col-sm-2">
            Notes:
        </dt>
        <dd class = "col-sm-10">
            @Model.CustomerNotes
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4">Edit</a>
    <a asp-action="Index" asp-route-date="@Model.Sitting.Start.ToString("MM-dd-yyyy")" class="btn btn-danger px-4">Back</a>
</div>
