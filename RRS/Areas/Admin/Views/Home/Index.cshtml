    <div class="row justify-content-evenly">
        <a class="btn btn-success col-3" asp-area="Admin" asp-controller="Reservation" asp-action="Create">Create Reservations</a>
        <a class="btn btn-success col-3" asp-area="Admin" asp-controller="Sitting" asp-action="Create">Create Sittings</a>
