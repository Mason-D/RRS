
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid justify-content-evenly">
    <div class="row">
        <h1 class="col-6 justify-content-center text-center">Reservations</h1>
        <h1 class="col-6 justify-content-center text-center">Sittings</h1>
    </div>

    <div class="row justify-content-evenly mb-1">
        <a class="btn btn-primary col-5 " asp-area="Admin" asp-controller="Reservation" asp-action="Index">Manage Reservations</a>
        <a class="btn btn-primary col-5 " asp-area="Admin" asp-controller="Sitting" asp-action="Edit">Manage Sittings</a>
    </div>

    <div class="row justify-content-evenly mb-1">
        <a class="btn btn-success col-5 " asp-area="Admin" asp-controller="Reservation" asp-action="Create">Create Reservations</a>
        <a class="btn btn-success col-5" asp-area="Admin" asp-controller="Sitting" asp-action="Create">Create Sittings</a>
    </div>
    
    <div class="row justify-content-evenly">
        <h1 class="col-6 justify-content-center text-center">Employees</h1>
        <h1 class="col-6 justify-content-center text-center">Tables</h1>
    </div>

    <div class="row justify-content-evenly mb-1">
        <a class="btn btn-success col-5" asp-area="Admin" asp-controller="Employee" asp-action="Register">Create Employees</a>
        <a class="btn btn-success col-5 " asp-area="Admin" asp-controller="Table" asp-action="Index">Reserve Tables</a>
    </div>

    <div class="row justify-content-evenly mb-1">
        <a class="btn btn-primary col-5" asp-area="Admin" asp-controller="Employee" asp-action="Index">Manage Employees</a>
        <div class="col-5"></div>
    </div>

</div>




